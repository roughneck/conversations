<h1>New Conversation</h1>

<%= form_for(@conversation, :url => user_conversations_path) do |f| %>
  <div>
    <%= f.label :to_tokens %>
    <%= f.text_field :to_tokens %>
  </div>
  <%= f.fields_for :conversation do |c| %>
    <div>
      <%= c.label :subject %>
      <%= c.text_field :subject %>
    </div>
    <%= c.fields_for :messages do |m| %>
      <div>
        <%= m.label :body %><br />
        <%= m.text_area :body %>
      </div>
    <% end %>
  <% end %>

  <%= f.submit %>
<% end %>